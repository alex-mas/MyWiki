{
    "compilerOptions": {
        "outDir": "./dist/src",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": false,
        "strictNullChecks": false,
        "module": "commonjs",
        "target": "es2017",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./workers/**"
    ]
}